###########################################
# Production server environment variables #
###########################################

# Environment (set to "production" for HTTPS redirect)
ENVIRONMENT=production

# Admin user (for /admin routes)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# Flask/app
FLASK_DEBUG=0
SECRET_KEY=your-production-secret-key-here

# Database configuration
MYSQL_ROOT_PASSWORD=your-root-password
MYSQL_DATABASE=pabulib
MYSQL_USER=pabulib_user
MYSQL_PASSWORD=your-db-password
MYSQL_PORT=3306

# PB files location (container paths)
PB_FILES_DIR=./pb_files
PB_FILES_DEPRECIATED_DIR=./pb_files_depreciated

# Optional: Adminer (set port to run, comment out to disable)
# ADMINER_PORT=8080

# DB refresh settings
REFRESH_FULL=0
WAIT_FOR_DB_MAX_TRIES=120
WAIT_FOR_DB_SLEEP=3
WAIT_FOR_DB_GRACE=2